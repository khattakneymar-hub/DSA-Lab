#include <iostream>

using namespace std;

int generateCode(int n)
 {

if (n == 0 || n == 1)
{
        return 1;
}
 Else
 {
        return n * generateCode(n - 1);
}

}


int main() {
    int (*codePtr)(int) = generateCode;
    
    int number;
    
    cout << "Enter a number: ";
    cin >> number;
    
    int secretCode = codePtr(number);

    cout << "Your secret code is: " << secretCode << endl;

    return 0;
}
